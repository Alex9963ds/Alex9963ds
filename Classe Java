public class Calculadora {
    // Método para adicionar dois números
    public int somar(int a, int b) {
        return a + b;
    }

    // Método para subtrair dois números
    public int subtrair(int a, int b) {
        return a - b;
    }

    // Método para multiplicar dois números
    public int multiplicar(int a, int b) {
        return a * b;
    }

    // Método para dividir dois números
    public double dividir(int a, int b) {
        if (b == 0) {
            System.out.println("Erro: divisão por zero!");
            return 0;
        }
        return (double) a / b;
    }

    public static void main(String[] args) {
        // Exemplo de utilização da classe Calculadora
        Calculadora calc = new Calculadora();
        System.out.println("Soma: " + calc.somar(5, 3));
        System.out.println("Subtração: " + calc.subtrair(10, 7));
        System.out.println("Multiplicação: " + calc.multiplicar(4, 6));
        System.out.println("Divisão: " + calc.dividir(20, 4));
    }
}
